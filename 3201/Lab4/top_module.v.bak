module top_module (
    input CLOCK_50,     // 50 MHz from DE10-Lite
    input [1:0] KEY,    // KEY[0]=reset, KEY[1]=pause (active low)
    input SW0,          // 0=24s, 1=30s
    output [6:0] HEX0,  // ones digit
    output [6:0] HEX1   // tens digit
);
    wire clk_1hz;

    // Instantiate your divider
    ClockDivider u_div (
        .cin(CLOCK_50),
        .cout(clk_1hz)
    );

    // Instantiate the shot clock
    shot_clock u_clock (
        .clk_1hz(clk_1hz),
        .reset_n(KEY[0]),
        .pause_n(KEY[1]),
        .mode(SW0),
        .ones(HEX0),
        .tens(HEX1)
    );
endmodule
