/**

 * @file    MKL43Z4_Project.c

 * @brief   Application entry point.

 */
#include <stdio.h>
#include "board.h"
#include "peripherals.h"
#include "pin_mux.h"
#include "clock_config.h"
#include "MKL43Z4.h"
#include "fsl_debug_console.h"

int Sw1;
int main(void) {

	BOARD_InitBootPins();
	BOARD_InitBootClocks();
	BOARD_InitBootPeripherals();
#ifndef BOARD_INIT_DEBUG_CONSOLE_PERIPHERAL
	BOARD_InitDebugConsole();
#endif

	PRINTF("Hello World\n");

        	SIM->SCGC5 |=(1<<9) | (1<<11) |(1<<12);
        	PORTA->PCR[4] = 0x103;  // sw1
        	PORTC->PCR[3] = 0x103;	// sw2

        	PORTD->PCR[5] = 0x100;	// green

        	PTA->PDDR &=~(1<<4);
        	PTC->PDDR &=~(1<<3);

        	PTD->PDDR |=(1<<5);
        	PTE->PDDR |=(1<<31);


   	__disable_irq();
   	NVIC_DisableIRQ(PORTC_PORTD_IRQn);

   	PORTC->PCR[3] &= ~0xF0000; // disable interrupt on c3
   	PORTC->PCR[3] |= 0xA0000;  // enable interrupt on edge
   	NVIC_SetPriority(PORTC_PORTD_IRQn, 192);
   	NVIC_ClearPendingIRQ(PORTC_PORTD_IRQn);
   	NVIC_EnableIRQ(PORTC_PORTD_IRQn);
   	__enable_irq();

	while(1) {
    	Sw1=(PTA->PDIR & (1<<4))>>4;
    	__asm volatile ("nop");
	}
	return 0 ;
}


void PORTC_PORTD_IRQHandler(void) {
	switch(PORTC->ISFR) { // when there is an interrupt, the corresponding bit=1
    	case(0b1000): // there is an interrupt on pin 3
        	PORTC->PCR[3] |= (1<<24); //clear the flag


    	if ( Sw1 == 0)
        	{PTD->PTOR = 1<<5; //toggle PORTD 5 (green)

        	}
        	break;
    	default:
        	PORTC->ISFR |=0xFFFFFFFF;
	}
}
